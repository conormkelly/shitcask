{
  "name": "shitcask",
  "version": "1.0.0",
  "description": "Basic pure Node.js key-value store DB server.",
  "main": "main.js",
  "scripts": {
    "start": "node ./server/main.js",
    "local": "nodemon ./server/main.js",
    "test": "jest --collect-coverage",
    "format": "prettier-standard --format",
    "client-demo": "node ./client/demo.js"
  },
  "lint-staged": {
    "*": [
      "prettier-standard --lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged",
      "pre-push": "npm run test && exit 1"
    }
  },
  "keywords": [
    "db",
    "key-value",
    "store",
    "database"
  ],
  "author": "Conor Kelly <conormpkelly@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "ajv": "^7.2.3",
    "ajv-errors": "^2.0.1",
    "socket.io": "^4.0.0",
    "socket.io-client": "^4.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier-standard": "^16.4.1"
  }
}
